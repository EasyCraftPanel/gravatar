{
  "name": "ianm/gravatar",
  "description": "Add gravatar support",
  "keywords": [
    "flarum", "gravatar"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/imorland/gravatar/issues",
    "source": "https://github.com/imorland/gravatar",
    "forum": "https://discuss.flarum.org/d/"
  },
  "require": {
    "php": "^7.4 || ^8.0",
    "flarum/core": "^1.0.3"
  },
  "authors": [
    {
      "name": "IanM",
      "homepage": "https://discuss.flarum.org/u/ianm",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "IanM\\Gravatar\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "Gravatar",
      "category": "feature",
      "icon": {
        "image": "resources/logo.svg",
        "backgroundColor": "#0072e3",
        "backgroundSize": "80%",
        "backgroundRepeat": "no-repeat",
        "backgroundPosition": "center"
    }
    },
    "flagrow": {
      "discuss": ""
    }
  }
}
